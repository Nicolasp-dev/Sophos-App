<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SophosApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <!--Custom Styles -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/main_text_color</item>
        <item name="titleTextColor">@color/main_text_color</item>
        <item name="titleTextStyle">@font/montserrat_bold</item>
    </style>

    <style name="loginInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeColor">@color/outline_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="FingerPrintButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="strokeColor">@color/main_text_color</item>
        <item name="strokeWidth">@dimen/btnBorderStroke</item>
        <item name="backgroundTint">@color/background</item>
        <item name="icon">@drawable/ic_fingerprint</item>
        <item name="iconTint">@color/main_text_color</item>
    </style>

    <style name="menuCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="menuBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    




</resources>